@model PiattoViewModel

<form method="post">
    <p> Sicuro di voler eliminare il piatto @Model.Nome dal menù?</p>

    <div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" readonly/> 
    <span asp-validation-for="Nome" class="text-danger"></span> 
</div>
    <input type="submit" value="Togli dal menù" class="btn btn-primary"/>
<a class="btn btn-primary" asp-controller="Menu" asp-action="Index">Indietro</a>

</form>

