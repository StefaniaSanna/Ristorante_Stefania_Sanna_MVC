@model List<MenuViewModel>

<h1>Menù offerti dalla casa</h1>


@if (User.IsInRole("Ristoratore"))
{
    <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci un nuovo menù</a>
}

<table class = "table table-hover table-bordered table-striped">

    <thead>
        <tr>
            
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                
                <td>@item.Nome</td>
                <td>
                    <a asp-controller = "Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Scopri il menù</a>
                                      
                </td>
            </tr>
        }    
    </tbody>  
</table>